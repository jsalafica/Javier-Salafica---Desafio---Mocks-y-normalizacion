<h1>Productos creados con Faker</h1>
<div>
    {{#if hasAny}}
        {{#each products}}
            <div style="display:flex; flex-direction:column; align-items:center; margin-left:50px; margin-bottom:10px; border: 3px solid #000000; width: 320px; height:200px">
                <h2>{{this.title}}</h2>
                <img src="{{this.thumbnail}}" alt="" width="120">
                <h3>Price: {{this.price}}</h3>
            </div>
        {{/each}}
    {{/if}}
</div>
<form action="/">
    <input type="submit" name="" id="" value="Volver">
</form>